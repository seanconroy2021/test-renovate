{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["kubernetes"],
  "kubernetes": {
    "managerFilePatterns": ["/^internal-services\\/config\\/cronjob\\/[^/]+\\.yaml$/"]
  },
  "commitMessageAction": "chore:",
  "commitBody": "Signed-off-by:\n{{{gitAuthor}}}",
  "packageRules": [
    {
      "matchManagers": ["kubernetes"],
      "matchDatasources": ["docker"],
      "pinDigests": true,
      "commitMessageTopic": "{{depName}} image digest {{digest}}"
    }
  ]
}